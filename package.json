{
  "name": "commensal-backend",
  "version": "1.0.0",
  "description": "API backend en NestJS para enviar y validar códigos de verificación vía WhatsApp",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:backend",
    "build:backend": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "lint": "tsc --noEmit",
    "build:frontend": "esbuild public/main.tsx --bundle --jsx=automatic --outdir=public/assets --format=esm --sourcemap",
    "build:all": "npm run build:frontend && npm run build",
    "postbuild": "node scripts/postbuild.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/serve-static": "^5.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "ioredis": "^5.8.1",
    "joi": "^18.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "twilio": "^5.10.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "esbuild": "^0.24.0",
    "@types/node": "^24.7.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
